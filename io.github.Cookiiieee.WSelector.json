{
    "app-id": "io.github.Cookiiieee.WSelector",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "wselector",
    "finish-args": [
        "--share=ipc",
        "--device=dri",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=network",
        "--filesystem=xdg-pictures/WSelector:create",
        "--talk-name=org.freedesktop.portal.Wallpaper",
        "--talk-name=org.kde.plasmashell"
    ],
    "cleanup": [
        "/share/man",
        "/include",
        "/lib/*.la",
        "/lib/*.a"
    ],
    "modules": [
        {
            "name": "python-modules",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "file",
                    "path": "python-modules.json"
                }
            ],
            "build-commands": [
                "pip3 install --verbose --no-index --find-links=file://${PWD} --prefix=${FLATPAK_DEST} -r python-modules.json"
            ]
        },
        {
            "name": "wselector",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Cookiiieee/WSelector.git",
                    "tag": "v0.2.0",
                    "commit": "5aae80d9b961747aff5bebf59eb724b1335b8faa"
                }
            ],
            "build-commands": [
                "pip3 install --verbose --no-build-isolation --prefix=${FLATPAK_DEST} .",
                "chmod +x install-icons.sh",
                "./install-icons.sh ${FLATPAK_DEST}",
                "update-desktop-database ${FLATPAK_DEST}/share/applications",
                "install -Dm755 files/wselector-wrapper.sh ${FLATPAK_DEST}/bin/wselector"
            ]
        }
    ]
}