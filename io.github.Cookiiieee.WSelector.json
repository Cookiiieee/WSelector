{
    "app-id": "io.github.Cookiiieee.WSelector",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "wselector",
    "finish-args": [
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--filesystem=home",
        "--filesystem=xdg-pictures:create",
        "--socket=system-bus",
        "--socket=session-bus"
    ],
    "modules": [
        {
            "name": "python-deps",
            "buildsystem": "simple",
            "build-options": {
                "env": {
                    "http_proxy": "",
                    "https_proxy": "",
                    "no_proxy": ""
                },
                "build-args": ["--share=network"]
            },
            "build-commands": [
                "pip3 install --no-cache-dir --prefix=/app requests>=2.31.0 beautifulsoup4>=4.13.4 psutil>=7.0.0"
            ]
        },
        {
            "name": "wselector",
            "buildsystem": "simple",
            "build-commands": [
                "# Install Python package",
                "mkdir -p ${FLATPAK_DEST}/lib/python3.12/site-packages",
                "cp -r wselector ${FLATPAK_DEST}/lib/python3.12/site-packages/",
                "# Install icons",
                "mkdir -p ${FLATPAK_DEST}/share/icons/hicolor/16x16/apps ${FLATPAK_DEST}/share/icons/hicolor/32x32/apps ${FLATPAK_DEST}/share/icons/hicolor/48x48/apps ${FLATPAK_DEST}/share/icons/hicolor/64x64/apps ${FLATPAK_DEST}/share/icons/hicolor/96x96/apps ${FLATPAK_DEST}/share/icons/hicolor/128x128/apps ${FLATPAK_DEST}/share/icons/hicolor/192x192/apps ${FLATPAK_DEST}/share/icons/hicolor/256x256/apps ${FLATPAK_DEST}/share/icons/hicolor/512x512/apps ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps",
                "chmod +x install-icons.sh",
                "./install-icons.sh ${FLATPAK_DEST}",
                "# Install desktop file and AppData",
                "install -Dm644 wselector.desktop ${FLATPAK_DEST}/share/applications/io.github.Cookiiieee.WSelector.desktop",
                "install -Dm644 io.github.Cookiiieee.WSelector.appdata.xml ${FLATPAK_DEST}/share/metainfo/io.github.Cookiiieee.WSelector.appdata.xml",
                "# Update desktop file with correct app ID",
                "sed -i 's/org\\.example\\.WSelector/io.github.Cookiiieee.WSelector/g' ${FLATPAK_DEST}/share/applications/io.github.Cookiiieee.WSelector.desktop",
                "# Update desktop database",
                "update-desktop-database ${FLATPAK_DEST}/share/applications",
                "# Install wallpaper script and launcher",
                "install -Dm755 set_wallpaper.sh ${FLATPAK_DEST}/bin/wselector-set-wallpaper",
                "echo '#!/bin/sh\nPYTHONPATH=${FLATPAK_DEST}/lib/python3.12/site-packages /usr/bin/python3 -m wselector \"$@\"' > ${FLATPAK_DEST}/bin/wselector",
                "chmod +x ${FLATPAK_DEST}/bin/wselector"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Cookiiieee/WSelector.git",
                    "tag": "v0.1.0"
                }
            ]
        }
    ]
}