{
    "app-id": "io.github.Cookiiieee.WSelector",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "wselector",
    "tags": ["v0.1.8"],
    "sources": [
        {
            "type": "git",
            "url": "https://github.com/Cookiiieee/WSelector.git",
            "branch": "test"
        }
    ],
    "finish-args": [
        "--share=network",
        "--socket=wayland",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=session-bus",
        "--filesystem=xdg-pictures/WSelector:create",
        "--filesystem=xdg-cache/wselector:create",
        "--filesystem=xdg-config/wselector:create",
        "--filesystem=xdg-data/wselector:create",
        "--talk-name=org.freedesktop.portal.settings",
        "--system-talk-name=org.freedesktop.Notifications",
        "--talk-name=org.gnome.SessionManager",
        "--talk-name=org.gtk.Actions",
        "--talk-name=org.freedesktop.FileManager1"
    ],
    "cleanup": [
        "/share/man",
        "/include",
        "*.la",
        "*.a",
        "/bin/*.pyc",
        "/bin/__pycache__"
    ],
    "build-options": {
        "env": {
            "PYTHONPATH": "/app/lib/python3.12/site-packages"
        },
        "build-args": [
            "--share=network"
        ]
    },
    "modules": [
        {
            "name": "python3-base",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --prefix=${FLATPAK_DEST} requests beautifulsoup4 psutil"
            ]
        },
        {
            "name": "wselector",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Cookiiieee/WSelector.git",
                    "branch": "test"
                }
            ],
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/lib/python3.12/site-packages",
                "cp -r wselector ${FLATPAK_DEST}/lib/python3.12/site-packages/",
                "chmod +x install-icons.sh",
                "./install-icons.sh ${FLATPAK_DEST}",
                "install -Dm644 wselector.desktop ${FLATPAK_DEST}/share/applications/io.github.Cookiiieee.WSelector.desktop",
                "install -Dm644 io.github.Cookiiieee.WSelector.appdata.xml ${FLATPAK_DEST}/share/metainfo/io.github.Cookiiieee.WSelector.appdata.xml",
                "update-desktop-database ${FLATPAK_DEST}/share/applications",
                "echo '#!/bin/sh' > ${FLATPAK_DEST}/bin/wselector",
                "echo 'PYTHONPATH=/app/lib/python3.12/site-packages exec /usr/bin/python3 -m wselector \"$@\"' >> ${FLATPAK_DEST}/bin/wselector",
                "chmod +x ${FLATPAK_DEST}/bin/wselector"
            ]
        }
    ]
}